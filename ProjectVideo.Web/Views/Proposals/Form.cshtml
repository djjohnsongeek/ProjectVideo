@model ProjectVideo.Web.Models.Proposals.ProposalFormViewModel
@{
    ViewData["Title"] = "Project Proposal";
}

<div class="card-container" >
    <div class="card mt-3 mx-auto" style="max-width: 800px;">
        <div class="card-header">
            <h1 class="card-title h3">
                Project Proposal Form
            </h1>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col">
                        <div class="alert alert-info">
                            <h4 class="alert-heading">
                                About Us
                            </h4>
                            <span>
                                Thank you for reaching out to us, we would love to partner and help you out.
                                Our ministry focuses on the development of Christian media in local languages by providing equipment loans and media training.
                                We would like to know more about your vision and what you would like to accomplish with this partnership.
                                Please fill out this form to be submitted to the Board for approval of the project.
                            </span>
                        </div>
                        <fieldset class="mb-4">
                            <legend>Organization Info</legend>
                            <div class="mb-3">
                                <label class="form-label" asp-for="MainContact"></label>
                                <input class="form-control" asp-for="MainContact" />
                                <span class="form-text">
                                    Name of your organization's primary point of contact.
                                </span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="Email"></label>
                                <input class="form-control" asp-for="Email" />
                                <span class="form-text">
                                    The email for your organization's primary point of contact.
                                </span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="PhoneNumber"></label>
                                <input class="form-control" asp-for="PhoneNumber" />
                                <span class="form-text">
                                    The phone number for your organization's primary point of contact.
                                </span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="OrganizationName"></label>
                                <input class="form-control" asp-for="OrganizationName" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="OrganizationHistory"></label>
                                <textarea class="form-control" asp-for="OrganizationHistory"></textarea>
                                <span class="form-text">
                                    A brief history of your Organization.
                                </span>
                            </div>
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="StaffArePaid">
                                    <label class="form-check-label" asp-for="StaffArePaid"></label>
                                </div>
                            </div>
                        </fieldset>
                        <fieldset class="mb-4">
                            <datalist id="rolename-options">
                                @foreach(string roleName in Model.TeamMemberRoles)
                                {
                                    <option value="@roleName"></option>
                                }
                            </datalist>
                            <legend>
                                Team Members
                                <button class="btn btn-secondary float-end" id="members-input-add-btn" type="button">
                                    <i class="bi bi-plus"></i>
                                    Add Member
                                </button>
                            </legend>

                            <div id="members-input-container">
                            </div>
                        </fieldset>
                        <fieldset class="mb-4">
                            <legend>Project Info</legend>
                            <div class="mb-3">
                                <label class="form-label" asp-for="ProjectTitle"></label>
                                <input class="form-control" asp-for="ProjectTitle" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="TargetAudience"></label>
                                <input class="form-control" asp-for="TargetAudience" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="KeyObjectives"></label>
                                <textarea class="form-control" asp-for="KeyObjectives"></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Project Time Frame</label>
                                <div class="input-group">
                                    <input class="form-control" asp-for="ProjectTimeFrameNumber" />
                                    <select class="form-control" asp-for="ProjectTimeFrameInterval">
                                        <option value="Days">Days</option>
                                        <option value="Weeks">Weeks</option>
                                        <option value="Months">Months</option>
                                        <option value="Years">Years</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="MainMethods"></label>
                                <textarea class="form-control" asp-for="MainMethods"></textarea>
                                <span class="form-text">
                                    What are the main methods you intend to use to reach your goals?
                                </span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="PlannedVideos"></label>
                                <textarea class="form-control" asp-for="PlannedVideos"></textarea>
                                <span class="form-text">
                                    Please be as specific as possible about the content / genre and approximate release dates.<br/>
                                    For example: "January - short film about a family coming to Christ, February - testimony from a new believer"
                                </span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="EstimatedProjectCost"></label>
                                <div class="input-group">
                                    <span class="input-group-text">USD Per year $</span>
                                    <input class="form-control" asp-for="EstimatedProjectCost" />
                                </div>
                                <span class="form-text">
                                    Project Video does not pay for production costs or salaries but simply wishes to see that there is a budget plan.
                                </span>
                            </div>
                        </fieldset>
                        <fieldset class="mb-4">
                            <legend>Current Resources</legend>
                            <div class="mb-3">
                                <label class="form-label" asp-for="CurrentEquipment"></label>
                                <textarea class="form-control" asp-for="CurrentEquipment"></textarea>
                                <span class="form-text">
                                    What video and audio equipment do you currently have?
                                </span>
                            </div>
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input reveal-input" asp-for="HasAudioSpace" data-target="audioSpace-description-div">
                                    <label class="form-check-label" asp-for="HasAudioSpace"></label>
                                </div>
                            </div>
                            <div class="mb-3 d-none" id="audioSpace-description-div">
                                <label class="form-label" asp-for="AudioSpaceDescription"></label>
                                <textarea class="form-control" asp-for="AudioSpaceDescription"></textarea>
                            </div>
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input reveal-input" asp-for="HasComputer" data-target="computer-description-div">
                                    <label class="form-check-label" asp-for="HasComputer"></label>
                                </div>
                            </div>
                            <div id="computer-description-div" class="mb-3 d-none">
                                <label class="form-label" asp-for="ComputerDescription"></label>
                                <textarea class="form-control" asp-for="ComputerDescription"></textarea>
                                <span class="form-text">
                                    Is your computer a Mac or PC? What are it's specifications?
                                </span>
                            </div>
                        </fieldset>
                        <fieldset class="mb-4">
                            <legend>
                                Porfolio
                                <button class="btn btn-secondary float-end" type="button" id="links-input-add-btn">
                                    <i class="bi bi-plus"></i>
                                    Add Link
                                </button>
                            </legend>
                            <span class="form-text">Please add links to videos your team have created or to your social media channels if you have uploaded multiple videos.</span>
                            <div id="links-input-container">
                            </div>
                        </fieldset>
                        <div class="alert alert-info">
                            <h4 class="alert-heading">
                                Note
                            </h4>
                            Once we have the received your application it will be reviewed for approval by the board. Additional information might be required to further process the application. You should have a response within a month.
                        </div>
                        <div class="float-end">
                                <button class="btn btn-primary">
                                    <i class="bi bi-send-fill"></i>
                                    Send Proposal
                                </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ComplexInputCollection.js" asp-append-version="true"></script>
    <script src="~/js/ViewScripts/Proposals/Form.js" asp-append-version="true"></script>
}