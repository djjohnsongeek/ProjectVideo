@model ProjectVideo.Web.Models.Proposals.ProposalsIndexViewModel

<div class="card mt-3">
    <div class="card-header">
        <div class="row">
            <div class="col">
                <h1 class="card-title h3">Project Proposals</h1>
            </div>
            <div class="col text-end align-con">
                <a class="btn btn-outline-secondary" asp-controller="Proposals" asp-action="Form">
                    <i class="bi bi-ui-checks"></i>
                    Public Form
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-3">
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input class="form-control" id="proposals-search-input" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table table-striped" id="proposals-table">
                    <thead class="bg-primary-subtle">
                        <tr>
                            <th>Date Submitted</th>
                            <th>Organization Name</th>
                            <th>Project Title</th>
                            <th>Target Audience</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var proposal in Model.Proposals)
                        {
                            <tr>
                                <td>@proposal.SubmitDate</td>
                                <td>@proposal.OrganizationName</td>
                                <td>@proposal.ProjectTitle</td>
                                <td>@proposal.TargetAudience</td>
                                <td>@proposal.Status</td>
                                <td>
                                    <a asp-controller="Proposals" asp-action="Details" asp-route-id="@proposal.ProposalId" class="btn btn-primary">
                                        <i class="bi bi-info-circle-fill"></i>
                                        Details
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (Model.Proposals.Count == 0)
                        {
                            <tr>
                                <td colspan="6">
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle-fill"></i>
                                        No Proposals Found.
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="js/ViewScripts/Proposals/Index.js" asp-append-version="true"></script>
}